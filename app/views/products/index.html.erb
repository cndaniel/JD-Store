
<!-- 头部-->
<div class="header">
  <div class="headerContent">
    <div class="cart-wrap">
      <div class="cart">
         <%= link_to carts_path do  %>
            购物车 <i class="fa fa-shopping-cart"> </i> ( <%= current_cart.products.count %> )
         <% end %>
    </div>
  </div>


   <div class="search">
      <%= form_tag search_products_path , :method => :get, :class => "products-search-form" do %>
          <input name="utf8" type="hidden" value="✓">
          <input type="text" class="search-input" name="q" value="<%= params[:q] %>" placeholder="输入你要搜索的商品">
          <button type="submit" class="search-button pa tc"><i class="fa fa-search"></i></button>
      <% end %>
    </div>
  </div>
</div>


<!-- 分类条-->
<div class="menu ">
  <ul class="menuList">
    <li class="menuList-item">
      <a href="/products"><img src='<%= image_url 'logo1.png' %>'</a>
    </li>
    <li class="menuList-item">
      <a href="/products">全部商品</a>
    </li>
    <% Category.all.each do |category| %>
     <li class="menuList-item">
       <%= link_to category.name, products_path(category: category.name), class: "link" %>
     </li>
    <% end %>
  </ul>
</div>


<!-- 排序 -->
<div class="orderList">
  <div class="orderList-item "><h4><strong>商品排序:</strong></h4></div>
  <div class="orderList-item "><h4><strong>新品</strong></h4></div>
  <div class="orderList-item "><h4><strong>销量</strong></h4></div>
  <div class="orderList-item "><h4><strong>价格</strong></h4></div>
</div>


<!-- productList -->
<div class="container">
    <div class="row">
      <% @products.each do |product| %>
        <div class="col-xs-12 col-sm-3">
            <div class="productList">
              <div class="img-productList">
              <%= link_to product_path(product) do %>
              <% if product.image.present? %>
              <%= image_tag(product.image.thumb.url, class: "thumbnail") %>
              <% else %>
              <%= image_tag("http://palcehold.it/200x200&text=No Pic", class: "thumbnail") %>
              <% end %>
              <% end %>
              </div>
                <div class="productList-content">
                    <h4 class="productList-title">
                      <%= link_to(product.title, product_path(product))%>
                  </h4>
              </div>
          </div>
        </div>
        <% end %>
    </div>
  </div>
